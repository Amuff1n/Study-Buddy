<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:background="@drawable/home_gradiant"
    tools:context=".FindGroups">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:voiceSearchMode="showVoiceSearchButton|launchRecognizer"
            tools:background="@color/search_accent"
            android:focusable="true" />

        <ListView
            android:id="@+id/search_groups"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/search"
            android:background="@color/search_accent"
            android:divider="@color/colorPrimaryAlt1"
            android:padding="20dp" />

    </RelativeLayout>



</android.support.v4.widget.DrawerLayout>